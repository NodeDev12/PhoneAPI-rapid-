<!-- views/emailValidator.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Email check</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        form {
            text-align: center;
            margin-top: 70px; /* Adjusted margin-top to accommodate fixed navbar */
        }

        h1,
        h2 {
            text-align: center;
        }
    </style>
    <title>Email Validation Result</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="../history.css">
</head>

<body class="body">
<nav class="navbar navbar-expand-lg navbar-dark bg-custom fixed-top">
    <!-- Add 'fixed-top' class to make the navbar sticky at the top -->
    <a class="navbar-brand" href="#">Email Validator</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link" href="/home">Phone Validator</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/history">History</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/">Login</a>
            </li>
        </ul>
    </div>
</nav>

<div class="form">
    <h1>Email Validation Result</h1>

    <form action="/email-validate" method="post">
        <label for="email">Enter Email:</label>
        <input type="text" id="email" name="email" value="<%= emailValidationResult.email || '' %>" required>
        <button type="submit">Validate Email</button>
    </form>

    <% if (emailValidationResult.valid !== undefined) { %>
        <h2>Validation Results:</h2>
        <p><strong>Email:</strong> <%= emailValidationResult.email %></p>
        <p><strong>Valid:</strong> <%= emailValidationResult.valid ? 'Yes' : 'No' %></p>
        <p><strong>Provider:</strong> <%= emailValidationResult.provider %></p>
        <p><strong>Is Freemail:</strong> <%= emailValidationResult['is-freemail'] ? 'Yes' : 'No' %></p>
        <p><strong>Is Disposable:</strong> <%= emailValidationResult['is-disposable'] ? 'Yes' : 'No' %></p>
        <!-- Add more details as needed -->
    <% } %>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.0.7/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
